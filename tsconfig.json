{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "noImplicitAny": true,
    "baseUrl": ".",
    "types": ["node", "cypress"],
    "paths": {
      "~/*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}